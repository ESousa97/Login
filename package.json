{
  "name": "login-ui",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "lint": "npm run lint:html && npm run lint:css",
    "lint:html": "html-validate \"*.html\" \"components/**/*.html\"",
    "lint:css": "stylelint \"*.css\" \"components/**/*.css\"",
    "format": "prettier --write \"**/*.{html,css,md,json,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{html,css,md,json,yml,yaml}\"",
    "test": "node --test",
    "test:coverage": "c8 --reporter=lcov --reporter=text npm test",
    "build": "node scripts/build.js"
  },
  "devDependencies": {
    "c8": "^10.1.2",
    "html-validate": "^10.7.0",
    "prettier": "^3.3.3",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0"
  }
}
